<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/date_textview_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/date_textview_chatlog"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="yyyy/MM/dd(day)" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_chat_to_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="#001e43"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_textview_to_row" />

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/message_textview_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        app:angle="10dp"
        app:arrowHeight="10dp"
        app:arrowLocation="left"
        app:arrowPosition="8dp"
        app:arrowWidth="8dp"
        app:bubbleColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_chat_to_row"
        app:layout_constraintTop_toTopOf="@+id/image_view_chat_to_row" />

    <TextView
        android:id="@+id/time_textview_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/message_textview_to_row"
        app:layout_constraintStart_toEndOf="@+id/message_textview_to_row"
        tools:text="HH:mm" />

</androidx.constraintlayout.widget.ConstraintLayout>